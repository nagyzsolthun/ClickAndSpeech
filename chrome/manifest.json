{
	"manifest_version": 2,
	"name": "WebReader",
	"description": "reads selected text on webpages",
	"version": "0.8",
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["content/content.js"]
	}],
	"permissions": ["http://*/","https://*/", "storage", "tts"],
	"background" : {"page": "background/background.html"},
	"options_page": "options/html/options.html",
	"browser_action": {
		"default_icon": "icon64.png",
		"default_popup": "popup/popup.html"
	}
}
